<div id="add-unit-modal" class="modal">
    <div class="modal-content add-unit-content">
        <span class="close" onclick="closeAddUnitModal()">&times;</span>
        <h1 class="name-modal">Додати підрозділ</h1>
        <div class="form-container">
            <form id="add-unit-form" class="form-modal">
                <div class="unit-input-container">
                    <label class="modal-label" for="unitName">
                        Назва підрозділу:
                        <input id="unitName" name="unitName" type="text"
                               autofocus required minlength="2" maxlength="24"
                        placeholder="Введіть назву підрозділу">
                    </label>

                    <label class="modal-label" for="userId">
                        Користувач:
                        <select name="userId" id="userId" required></select>
                    </label>
                </div>
                <input class="btn form-btn" type="submit" value="Додати">
            </form>
        </div>
    </div>
</div>