<div id="add-user-modal" class="modal">
    <div class="modal-content add-user-content">
        <span class="close" onclick="closeAddUserModal()">&times;</span>
        <h2 class="name-modal">Додати користувача</h2>
        <div class="user-add-form-container form-container">
            <div class="error-message"></div>
            <form id="add-user-form" class="form-modal">
                <div class="user-input-container">
                    <div class="left">
                        <label class="modal-label" for="username">
                            Ім'я користувача:
                            <input type="text" id="username" name="username"
                                   autofocus required minlength="4" maxlength="16"
                                   placeholder="Введіть ім'я користувача">
                        </label>
                        <label class="modal-label" for="password">
                            Пароль:
                            <input type="password" id="password" name="password"
                                   required minlength="4"
                                   placeholder="Введіть пароль">
                        </label>
                        <label class="modal-label" for="licenseNumber">
                            Номер посвідчення:
                            <input type="text" id="licenseNumber" name="licenseNumber"
                                   required minlength="4"
                                   placeholder="Введіть номер посвідчення">
                        </label>
                    </div>

                    <div class="right">
                        <label class="modal-label" for="lastName">
                            Прізвище:
                            <input type="text" id="lastName" name="lastName"
                                   required minlength="2" maxlength="20"
                                   placeholder="Введіть прізвище">
                        </label>
                        <label class="modal-label" for="firstName">
                            Ім'я:
                            <input type="text" id="firstName" name="firstName"
                                   required minlength="2" maxlength="20"
                                   placeholder="Введіть ім'я">
                        </label>
                        <label class="modal-label" for="middleName">
                            По батькові:
                            <input type="text" id="middleName" name="middleName"
                                   required minlength="5" maxlength="26"
                                   placeholder="Введіть по батькові">
                        </label>
                    </div>
                </div>
                <input class="btn form-btn" type="submit" value="Додати">
            </form>
        </div>
    </div>
</div>