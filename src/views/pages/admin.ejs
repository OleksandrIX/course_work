<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/public/css/main.css">
    <link rel="stylesheet" href="/public/css/modal.css">
    <link rel="stylesheet" href="/public/css/admin.css">
    <title>Сторінка Адміна</title>
</head>
<body>
<div class="page">
    <nav class="navbar">
        <h2 class="page-name">Адміністратор</h2>
        <ul class="top-navbar">
            <li class="top-navbar-item">
                <button class="navbar-button" onclick="logout();" type="button">Вийти</button>
            </li>
        </ul>
    </nav>

    <main class="main-container">
        <div class="users">
            <%- include("../components/user/headerList.ejs", {nameList: "Користувачі"}) %>
            <ul class="user-list">
                <% users.forEach((user, index)=>{ %>
                    <li id="user-<%= user.id %>" class="list-item">
                        <p><strong><%= index + 1 %>.</strong> <%= user.username %></p>
                        <%- include("../components/user/iconContainer.ejs") %>
                    </li>
                <% }) %>
            </ul>
        </div>

        <div class="garrisons">
            <%- include("../components/garrison/headerList.ejs", {nameList: "Гарнізони"}) %>
            <ul class="garrison-list">
                <% garrisons.forEach((garrison, index)=>{ %>
                    <li id="garrison-<%= garrison.id %>" class="list-item">
                        <p><strong><%= index + 1 %>.</strong> <%= garrison.nameGarrison %></p>
                        <%- include("../components/garrison/iconContainer.ejs") %>
                        <ul class="military-units">
                            <% if (garrison.military_units.length !== 0 ){ %>
                                <%- include("../components/garrison/listMilitaryUnit.ejs",
                                {militaryUnits: garrison.military_units}) %>
                            <% }else{ %>
                                <p class="empty-garrison">В цьому гарнізоні поки немає в/ч.</p>
                            <% } %>
                            <button class="icon show-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24"
                                     fill="none">
                                    <path d="M3.5868 13.7788C5.36623 15.5478 8.46953 17.9999
                                            12.0002 17.9999C15.5308 17.9999 18.6335 15.5478 20.413
                                            13.7788C20.8823 13.3123 21.1177 13.0782 21.2671 12.6201C21.3738
                                            12.2933 21.3738 11.7067 21.2671 11.3799C21.1177 10.9218 20.8823
                                            10.6877 20.413 10.2211C18.6335 8.45208 15.5308 6 12.0002 6C8.46953
                                            6 5.36623 8.45208 3.5868 10.2211C3.11714 10.688 2.88229 10.9216
                                            2.7328 11.3799C2.62618 11.7067 2.62618 12.2933 2.7328 12.6201C2.88229
                                            13.0784 3.11714 13.3119 3.5868 13.7788Z"
                                          stroke="#008F7A" stroke-width="2"
                                          stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M10 12C10 13.1046 10.8954 14 12 14C13.1046 14 14
                                            13.1046 14 12C14 10.8954 13.1046 10 12 10C10.8954 10 10 10.8954 10 12Z"
                                          stroke="#008F7A" stroke-width="2"
                                          stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                        </ul>
                    </li>
                <% }) %>
            </ul>
        </div>
    </main>
</div>

<div class="modals">
    <div class="user-modals">
        <%- include("../components/user/modal/add.ejs") %>
        <%- include("../components/user/modal/edit.ejs") %>
    </div>

    <div class="garrison-modals">
        <%- include("../components/garrison/modal/add.ejs") %>
        <%- include("../components/garrison/modal/edit.ejs") %>
    </div>
</div>

<script src="/public/js/index.js"></script>
<script src="/public/js/requests.js"></script>
<script src="/public/js/modal.js"></script>
<script src="/public/js/user.js"></script>
<script src="/public/js/garrison.js"></script>
</body>
</html>